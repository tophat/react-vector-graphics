{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna exec tsc -- --declaration",
    "build:watch": "lerna exec tsc --parallel -- --declaration --watch",
    "commit": "git-cz",
    "lint": "eslint packages/*/src/*.ts",
    "lint:fix": "eslint packages/*/src/*.ts --fix",
    "lock:check": "yarn-deduplicate --list",
    "lock:fix": "yarn-deduplicate",
    "postinstall": "yarn-deduplicate",
    "release": "lerna publish -y && git push origin --tags",
    "report:coverage": "codecov",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:modified": "jest --bail --findRelatedTests",
    "test:watch": "jest --watch --notify"
  },
  "devDependencies": {
    "@octokit/rest": "^18.0.1",
    "@svgr/core": "^5.2.0",
    "@svgr/plugin-svgo": "^5.3.0",
    "@tophat/commitizen-adapter": "^0.5.4",
    "@tophat/commitlint-config": "^0.3.4",
    "@tophat/eslint-config": "^0.7.0",
    "@types/fs-extra": "^9.0.1",
    "@types/glob": "^7.1.1",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.23",
    "@types/yargs": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "codecov": "^3.6.1",
    "commitizen": "^4.0.3",
    "commitlint": "^11.0.0",
    "cosmiconfig": "^7.0.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "husky": "^5.1.1",
    "jest": "^26.4.2",
    "jest-mock-props": "^1.7.2",
    "lerna": "^4.0.0",
    "lint-staged": "^10.2.11",
    "memfs": "^3.1.1",
    "minimatch": "^3.0.4",
    "prettier": "^2.0.5",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2",
    "yarn-deduplicate": "3.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleDirectories": [
      "./packages/*/src/",
      "./packages/*/tests/",
      "./node_modules"
    ],
    "testPathIgnorePatterns": [
      "./artifacts/",
      "./node_modules/"
    ],
    "setupFilesAfterEnv": [
      "./config/setupTests.ts"
    ],
    "coverageDirectory": "./artifacts/coverage"
  },
  "commitlint": {
    "extends": [
      "@tophat/commitlint-config"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@tophat/commitizen-adapter"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint",
      "yarn test:modified"
    ],
    "yarn.lock": [
      "yarn lock:check"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
